{
    "version": 9,
    "configurePresets": [
        {
            "name": "Debug",
            "inherits": "vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
          "environment": {
            "VCPKG_ROOT": "C:\\Programs\\vcpkg",
            "META_XR_SIMULATOR_PATH": "${sourceDir}/MetaXRSimulator"
          },
            "installDir": "${sourceDir}/Cemu"
        },
        {
            "name": "Release",
            "inherits": "vcpkg",
